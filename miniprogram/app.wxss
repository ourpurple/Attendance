/* app.wxss - 全局样式 */
page {
  background-color: #f2f2f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
  color: #000000;
  line-height: 1.6;
}

/* 容器 */
.container {
  padding: 32rpx;
}

/* 卡片 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
}

/* 按钮 */
.btn {
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx;
  border: none;
  box-sizing: border-box;
}

.btn:disabled {
  opacity: 0.5;
}

.btn-primary {
  background: #007AFF;
  color: #ffffff;
}

.btn-primary:active {
  background: #0051D5;
  transform: scale(0.98);
}

.btn-secondary {
  background: #E5E5EA;
  color: #000000;
}

.btn-success {
  background: #34C759;
  color: #ffffff;
}

.btn-success:active {
  background: #28A745;
  transform: scale(0.98);
}

/* 按钮禁用状态 - 灰色 */
button[disabled],
.btn[disabled] {
  background: #8E8E93 !important;
  color: #FFFFFF !important;
  opacity: 0.6;
}

.btn-primary[disabled] {
  background: #8E8E93 !important;
}

.btn-success[disabled] {
  background: #8E8E93 !important;
}

.btn-secondary[disabled] {
  background: #8E8E93 !important;
}

.btn-danger {
  background: #FF3B30;
  color: #ffffff;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 表单 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  color: #3C3C43;
  font-weight: 500;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #D1D1D6;
  border-radius: 20rpx;
  font-size: 32rpx;
  background: #ffffff;
}

/* 列表 */
.list-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.list-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-item-title {
  font-weight: 600;
  font-size: 32rpx;
}

.list-item-content {
  font-size: 28rpx;
  color: #3C3C43;
  line-height: 1.8;
}

.list-item-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #E5E5EA;
}

/* 状态标签 */
.status-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-success {
  background: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.status-warning {
  background: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.status-danger {
  background: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
}

.status-pending {
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #8E8E93;
}

.empty-state-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #8E8E93;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.stat-value {
  font-size: 64rpx;
  font-weight: 700;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #8E8E93;
}



