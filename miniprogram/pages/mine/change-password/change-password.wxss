.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #f2f2f7;
}

.form-group {
  margin-bottom: 40rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.form-label {
  display: block;
  margin-bottom: 20rpx;
  color: #1D1D1F;
  font-weight: 600;
  font-size: 30rpx;
  line-height: 1.4;
}

.form-input {
  width: 100%;
  min-height: 96rpx;
  padding: 28rpx 32rpx;
  border: 2rpx solid #E5E5EA;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #F9F9F9;
  box-sizing: border-box;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #007AFF;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.form-input::placeholder {
  color: #8E8E93;
  font-size: 30rpx;
}

.btn {
  margin-top: 48rpx;
  min-height: 96rpx;
  line-height: 96rpx;
  border-radius: 24rpx;
  font-size: 34rpx;
  font-weight: 600;
  padding: 0;
  border: none;
  box-sizing: border-box;
}

.btn-primary {
  background: linear-gradient(135deg, #007AFF 0%, #0051D5 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.btn-primary:active {
  background: linear-gradient(135deg, #0051D5 0%, #003D9E 100%);
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

.btn-block {
  width: 100%;
}

.required {
  color: #FF3B30;
  font-weight: 600;
}

