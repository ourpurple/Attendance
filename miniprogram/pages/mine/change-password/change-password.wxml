<!-- pages/mine/change-password/change-password.wxml -->
<view class="container">
  <view class="form-group">
    <view class="form-label">原密码 <text class="required">*</text></view>
    <input 
      class="form-input" 
      type="password" 
      value="{{oldPassword}}" 
      bindinput="onOldPasswordInput"
      bindfocus="onInputFocus"
      bindblur="onInputBlur"
      placeholder="请输入原密码"
      maxlength="50"
    />
  </view>

  <view class="form-group">
    <view class="form-label">新密码 <text class="required">*</text></view>
    <input 
      class="form-input" 
      type="password" 
      value="{{newPassword}}" 
      bindinput="onNewPasswordInput"
      bindfocus="onInputFocus"
      bindblur="onInputBlur"
      placeholder="请输入新密码（至少6位）"
      maxlength="50"
    />
  </view>

  <view class="form-group">
    <view class="form-label">确认新密码 <text class="required">*</text></view>
    <input 
      class="form-input" 
      type="password" 
      value="{{confirmPassword}}" 
      bindinput="onConfirmPasswordInput"
      bindfocus="onInputFocus"
      bindblur="onInputBlur"
      placeholder="请再次输入新密码"
      maxlength="50"
    />
  </view>

  <button class="btn btn-primary btn-block" bindtap="submitForm">确认修改</button>
</view>

