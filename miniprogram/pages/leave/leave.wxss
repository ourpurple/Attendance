/* pages/leave/leave.wxml */
.btn-block {
  width: 100%;
  margin-bottom: 32rpx;
}

.list-item-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #E5E5EA;
}

.list-item-footer .btn {
  flex: 1;
}

.label {
  font-weight: 600;
  margin-right: 8rpx;
}

.list-item-status {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 0 16rpx 0;
  border-bottom: 2rpx solid #E5E5EA;
}

/* 详情弹窗 */
.detail-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.detail-modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.detail-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #E5E5EA;
}

.detail-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}

.detail-modal-close {
  font-size: 48rpx;
  color: #8E8E93;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-modal-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.detail-label {
  font-size: 28rpx;
  color: #8E8E93;
  min-width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #000000;
  flex: 1;
  word-break: break-all;
}

.detail-section-divider {
  height: 2rpx;
  background: #E5E5EA;
  margin: 32rpx 0 24rpx 0;
}

.detail-section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 24rpx;
}

.detail-modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #E5E5EA;
}

/* 状态徽章样式 */
.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-success {
  background: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.status-warning {
  background: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.status-danger {
  background: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
}

.status-pending {
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
}

