/* pages/leave/apply/apply.wxss */
.textarea {
  min-height: 200rpx;
  padding: 24rpx 32rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.picker-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 8rpx;
}

.form-display {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: center;
  margin-top: 8rpx;
}

/* 表单行布局 */
.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.form-row .form-group {
  flex: 1;
  margin-bottom: 0;
}

.form-row .form-group-date {
  flex: 1.2; /* 日期栏稍微宽一些 */
}

.form-row .form-group-time {
  flex: 1;
}

.form-row .form-group .form-label {
  white-space: nowrap;
  margin-bottom: 16rpx;
}

