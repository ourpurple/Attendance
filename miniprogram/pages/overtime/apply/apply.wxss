/* pages/overtime/apply/apply.wxss */
.textarea {
  min-height: 200rpx;
  padding: 24rpx 32rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.picker-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 8rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 16rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.radio-label radio {
  margin-right: 16rpx;
}

.form-display {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: center;
  margin-top: 8rpx;
}

