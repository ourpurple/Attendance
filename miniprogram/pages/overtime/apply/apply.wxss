/* pages/overtime/apply/apply.wxss */
.textarea {
  min-height: 120rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.picker-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 8rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 16rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.radio-label radio {
  margin-right: 16rpx;
}

.form-display {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: center;
  margin-top: 8rpx;
}


/* 时间行布局 */
.time-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.time-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-label {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #e5e5e5;
}

.time-separator {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  margin-top: 32rpx;
}

/* 日期时间行布局 */
.date-time-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.date-item {
  flex: 1.2;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.date-label {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #e5e5e5;
}

/* 表单行布局 */
.form-row {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.form-row .form-group {
  flex: 1;
  margin-bottom: 0;
}

.form-row .form-group:first-child {
  margin-right: 10rpx;
}
