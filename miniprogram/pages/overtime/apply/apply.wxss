/* pages/overtime/apply/apply.wxss */
.textarea {
  min-height: 120rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.picker-icon {
  font-size: 32rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 8rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 16rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.radio-label radio {
  margin-right: 16rpx;
}

.form-display {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: center;
  margin-top: 8rpx;
}

.form-display-card {
  align-items: flex-start;
}

.form-display-single {
  width: 100%;
  text-align: center;
}

.form-display-manual {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}

.form-display-manual-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.manual-label {
  color: #666;
}

.manual-value {
  font-weight: 600;
  color: #1890ff;
}

.manual-highlight .manual-label {
  color: #1890ff;
}

.manual-days-input {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
}

.manual-days-toggle-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin: 10px 0;
}

.form-label.inline {
  margin-bottom: 0;
  flex: 0 0 auto;
}

.manual-days-switch {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.manual-days-switch text,
.manual-days-switch-text {
  font-size: 28rpx;
  color: #666;
}

.form-label-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.form-label-row .form-label {
  flex: 0 0 auto;
  margin-bottom: 0;
}

.form-display-inline-right {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 30rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: left;
  flex: 1;
  min-width: 0;
  flex-wrap: nowrap;
}

.form-display-inline-right text {
  white-space: nowrap;
}


/* 时间行布局 */
.time-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.time-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-label {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #e5e5e5;
}

.time-separator {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  margin-top: 32rpx;
}

/* 日期时间行布局 */
.date-time-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.date-item {
  flex: 1.2;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.date-label {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #e5e5e5;
}

/* 表单行布局 */
.form-row {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.form-row .form-group {
  flex: 1;
  margin-bottom: 0;
}

.form-row .form-group:first-child {
  margin-right: 10rpx;
}
