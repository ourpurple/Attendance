/* pages/attendance/attendance.wxss */
.date-filter {
  margin-bottom: 32rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.picker-icon {
  font-size: 32rpx;
}

.list-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.attendance-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  gap: 16rpx;
}

.checkin-status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
  margin-left: auto;
}

.checkin-status-normal {
  background: #34C759;
  color: #ffffff;
}

.checkin-status-business {
  background: #007AFF;
  color: #ffffff;
}

/* 签退状态标签 */
.checkout-status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
  margin-left: auto;
}

.checkout-status-normal {
  background: #34C759;
  color: #ffffff;
}

.checkout-status-early {
  background: #FF9500;
  color: #ffffff;
}

.checkout-status-absent {
  background: #FF3B30;
  color: #ffffff;
}

.attendance-location {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #E5E5EA;
  font-size: 24rpx;
  color: #8E8E93;
}

/* 缺勤状态样式 */
.checkin-status-absent {
  background: #FF3B30;
  color: #ffffff;
}

/* 请假状态样式 */
.checkin-status-leave {
  background: #007AFF;
  color: #ffffff;
}

.checkout-status-leave {
  background: #007AFF;
  color: #ffffff;
}

/* 缺勤列表项背景 */
.list-item-absent {
  background-color: rgba(255, 59, 48, 0.05);
  border-left: 6rpx solid #FF3B30;
}

